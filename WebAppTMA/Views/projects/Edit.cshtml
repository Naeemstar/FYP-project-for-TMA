<script>
    $("#savbtn").click(function () {

        $.ajax({
            type: 'POST',
            url: '/projects/Edit/',
            data: $("#editform").serialize()

        })
            .done(function (response) {
                $("#tablcontainer").html(response);
                $("#actioncontainer").html("");
            })
            .fail(function (XMLHttpRequest, TextStatus, errorThrown) {
                alert("fail");
            })
    });
</script>